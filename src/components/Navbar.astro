---
import { Image } from "astro:assets";
import Logo from "../images/elevapro_logo.svg";
const currentPage = Astro.url.pathname;
---

<header class="lg:px-16 px-4 bg-white flex flex-wrap items-center py-2 shadow-md sticky top-0 z-50">
    <div class="flex-1 flex justify-between items-center">
        <a href="/" class="text-xl">
            <Image src={Logo} alt="About Image" class="w-2/3 p-4" />
        </a>
    </div>

    <label for="menu-toggle" class="pointer-cursor md:hidden block">
      <svg class="fill-current text-gray-900"
        xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20">
        <title>menu</title>
        <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
      </svg>
    </label>
    <input class="hidden" type="checkbox" id="menu-toggle" />

    <div class="hidden md:flex md:items-center md:w-auto w-full" id="menu">
        <nav>
            <ul class="md:flex items-center justify-between text-base text-gray-700 pt-4 md:pt-0">
                <li>
                    <a class={`md:p-4 py-3 px-0 block text-gray-700 ${currentPage === '/' ? 'font-bold' : 'font-normal'}`} href="/">Inicio</a>
                </li>
                <li>
                    <a class={`md:p-4 py-3 px-0 block text-gray-700 ${currentPage === '/services' ? 'font-bold' : 'font-normal'}`} href="/services">Servicios</a>
                </li>
                <li>
                    <a class={`md:p-4 py-3 px-0 block text-gray-700 ${currentPage === '/contact' ? 'font-bold' : 'font-normal'}`} href="/contact">Contacto</a>
                </li>
            </ul>
        </nav>
    </div>
</header>


<style>
    header{
        background-color: #E4E4E4;
        color: #323C45;
    }
    nav{
        font-weight: bold;
    }
</style>